# File Processing Service Configuration

# =============================================================================
# API Configuration
# =============================================================================
APP_NAME="File Processing Service"
HOST="0.0.0.0"
PORT=8000
DEBUG=false

# =============================================================================
# File Processing Configuration
# =============================================================================
MAX_FILE_SIZE=52428800  # 50MB in bytes
TEMP_DIR="data/temp"

# Processing limits
DEFAULT_CHUNK_SIZE=2000
DEFAULT_CHUNK_OVERLAP=200
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_SECONDS=300  # 5 minutes

# =============================================================================
# LangChain/OpenAI Configuration (REQUIRED for semantic analysis)
# =============================================================================
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4.1-mini"
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# =============================================================================
# Embedding Configuration
# =============================================================================
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
SEMANTIC_EMBEDDING_MODEL="sentence-transformers/all-mpnet-base-v2"

# =============================================================================
# External Storage Configuration (REQUIRED)
# =============================================================================

# Vector Database (for embeddings)
VECTOR_DB_URL="your-vector-db-connection-string"
# Examples:
# VECTOR_DB_URL="pinecone://your-api-key@your-environment"
# VECTOR_DB_URL="weaviate://localhost:8080"
# VECTOR_DB_URL="qdrant://localhost:6333"

# Graph Database (optional - for relationships)
GRAPH_DB_URL="your-graph-db-connection-string"
# Examples:
# GRAPH_DB_URL="neo4j://neo4j:password@localhost:7687"
# GRAPH_DB_URL="arangodb://root:password@localhost:8529"

# Document Store (optional - for metadata)
DOCUMENT_STORE_URL="your-document-store-connection-string"
# Examples:
# DOCUMENT_STORE_URL="mongodb://localhost:27017/file_processor"
# DOCUMENT_STORE_URL="elasticsearch://localhost:9200"

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# =============================================================================
# Example Production Configuration
# =============================================================================

# For production deployment, use environment-specific values:
# APP_NAME="Production File Processing Service"
# DEBUG=false
# MAX_CONCURRENT_JOBS=10
# JOB_TIMEOUT_SECONDS=600
# LOG_LEVEL="WARNING"

# Production storage URLs:
# VECTOR_DB_URL="pinecone://prod-api-key@prod-environment"
# GRAPH_DB_URL="neo4j://prod-user:prod-password@prod-server:7687"
# DOCUMENT_STORE_URL="mongodb://prod-user:prod-password@prod-cluster/file_processor"