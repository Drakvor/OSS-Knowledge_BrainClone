# OSS Knowledge Search Server Environment Variables
# Copy this file to .env and fill in your actual values

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=oss_knowledge
POSTGRES_USER=oss
POSTGRES_PASSWORD=changeme

# Neo4j Configuration (optional)
NEO4J_URI=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=changeme
NEO4J_DATABASE=neo4j

# Azure OpenAI Configuration
OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-service.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_EMBEDDING_DEPLOYMENT=oss-embedding
AZURE_EMBEDDING_MODEL=text-embedding-3-large
AZURE_EMBEDDING_SMALL_MODEL=oss-embedding-small

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=general
